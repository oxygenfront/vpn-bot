generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String             @id @unique
  telegramId    String             @unique
  username      String?
  cardToken     String
  langCode      String             @default("ru")
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  PromocodeUse  PromocodeUse[]
  subscriptions UserSubscription[]
}

model Plan {
  id                Int                @id @default(autoincrement())
  name              String             @unique
  trafficLimit      String
  subscriptionPlans SubscriptionPlan[]
}

model DeviceRange {
  id                Int                @id @default(autoincrement())
  range             String             @unique
  subscriptionPlans SubscriptionPlan[]
}

model SubscriptionPlan {
  id                Int                @id @default(autoincrement())
  planId            Int
  deviceRangeId     Int
  months            Int
  price             Float
  deviceRange       DeviceRange        @relation(fields: [deviceRangeId], references: [id])
  plan              Plan               @relation(fields: [planId], references: [id])
  userSubscriptions UserSubscription[]

  @@unique([planId, deviceRangeId, months])
}

model UserSubscription {
  id                  String           @id @unique
  userId              String
  startBillingDate    DateTime
  nextBillingDate     DateTime
  expiredDate         DateTime
  lastInvoiceId       String
  status              Status
  subscriptionPlanId  Int
  urlLinkConnection   String
  vlessLinkConnection String
  createdAt           DateTime
  promocodeId         String?
  usedPromocode       Promocode?       @relation(fields: [promocodeId], references: [id])
  subscriptionPlan    SubscriptionPlan @relation(fields: [subscriptionPlanId], references: [id])
  user                User             @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Promocode {
  id                   String             @id @default(uuid())
  promocode            String?            @unique
  type                 String
  value                Float
  expiredDate          DateTime?
  availableCountUses   Int
  maxUsesPerUser       Int                @default(1)
  status               String             @default("ACTIVE")
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  minOrderAmount       Float
  minMonthsOrderAmount Int
  uses                 PromocodeUse[]
  UserSubscription     UserSubscription[]
}

model PromocodeUse {
  id          String    @id @default(uuid())
  promocodeId String
  userId      String
  usedAt      DateTime  @default(now())
  promocode   Promocode @relation(fields: [promocodeId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}

enum Status {
  Cancelled
  Active
}
